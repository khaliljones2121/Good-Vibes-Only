<!DOCTYPE html>
<html>
<head>
  <title>Today's Affirmation</title>
  <link rel="icon" type="image/png" href="/favicon.png">
  <link rel="stylesheet" href="/styles.css">
  <link href="https://fonts.googleapis.com/css2?family=Comic+Neue:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>
  <nav style="margin-bottom:20px;">
  <a href="/user">Home</a> |
    <a href="/user">Profile</a> |
  <a href="/affirmations">Starter Affirmations</a> |
    <a href="/notifications/view">Notifications</a> |
    <% if (!user) { %>
      <a href="/login">Login</a> |
    <% } %>
    <a href="/logout">Logout</a>
  </nav>
  <h1>Today's Affirmations</h1>
  <ul>
    <% affirmations.forEach(function(affirmation) { %>
      <li>
        <strong><%= affirmation.message %></strong><br>
        Time: <%= affirmation.time %><br>
        User: <%= affirmation.user ? affirmation.user.name : 'Unknown' %>
      </li>
    <% }); %>
  </ul>
</body>
</html>
<%- include('partials/footer') %>
</html>
