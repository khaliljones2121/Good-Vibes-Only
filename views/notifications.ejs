<%- include('partials/header', { user: user }) %>
<!DOCTYPE html>
<html>
<head>
  <title>Notifications</title>
  <link rel="icon" type="image/png" href="/favicon.png">
  <link rel="stylesheet" href="/styles.css">
  <link href="https://fonts.googleapis.com/css2?family=Comic+Neue:wght@400;700&display=swap" rel="stylesheet">
</head>
<body style="background: url('/public/photo-1604699229817-27301bdfed68.avif') no-repeat center center fixed; background-size: cover;">
  <div class="center-notifications">
    <h1>Your Notifications</h1>
    <form action="/notifications/delete-all" method="POST" style="margin-bottom:20px; display:flex; justify-content:center;">
      <button type="submit" style="margin:0 auto;">Remove All Seen Notifications</button>
    </form>
    <ul>
      <% notifications.forEach(function(notification) { %>
        <li>
          <strong><%= notification.type %></strong>: <%= notification.message %> <br>
          Time: <%= notification.time %> <br>
          User: <%= notification.user ? notification.user.name : 'Unknown' %>
        </li>
      <% }); %>
    </ul>
  </div>
</body>
</html>
<%- include('partials/footer') %>
</html>
