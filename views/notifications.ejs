<!DOCTYPE html>
<html>
<head>
  <title>Notifications</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <nav style="margin-bottom:20px;">
    <a href="/">Home</a> |
    <a href="/user">Profile</a> |
  <a href="/affirmations">Starter Affirmations</a> |
    <a href="/notifications/view">Notifications</a> |
    <a href="/login">Login</a> |
    <a href="/logout">Logout</a>
  </nav>
  <h1>All Notifications</h1>
  <ul>
    <% notifications.forEach(function(notification) { %>
      <li>
        <strong><%= notification.type %></strong>: <%= notification.message %> <br>
        Time: <%= notification.time %> <br>
        User: <%= notification.user ? notification.user.name : 'Unknown' %>
      </li>
    <% }); %>
  </ul>
</body>
</html>
